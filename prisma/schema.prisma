generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  slug           String     @unique
  desc           String
  discount       String
  img            String
  price          Int
  catSlug        String
  cat            Categories @relation(fields: [catSlug], references: [slug])
  allSizes       String[]
  availableSizes String[]
  createdAt      DateTime   @default(now())
}

model Categories {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  slug     String    @unique
  img      String
  products Product[]
}
